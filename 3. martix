def add():

    print("Enter matrix 1:")
    R = int(input("Enter the number of rows:"))#input by user
    C = int(input("Enter the number of columns:"))
    matrix1 = []
    print("Enter the entries row wise:")
    for i in range(R):      # A for loop for row entries
        a =[]
        for j in range(C):  # A for loop for column entries
           a.append(int(input(f"element[{i+1}][{j+1}]:")))
        matrix1.append(a)
    print ("Matrix 1 is:")
# For printing the matrix
    for i in range(R):
        for j in range(C):
            print(matrix1[i][j], end = " ")
        print()
    print("Enter matrix 2:")
    matrix2 = []
    print("Enter the entries row wise:")
    # For user input
    for i in range(R):      # A for loop for row entries
        a =[]
        for j in range(C):  # A for loop for column entries
           a.append(int(input(f"element[{i+1}][{j+1}]:")))
           matrix2.append(a)
    # For printing the matrix
    print("Matrix 2 is : ")
    for i in range(R):
        for j in range(C):
           print(matrix2[i][j], end = " ")
        print()
   #addition of matrices
    print("addition of two matrices is: ")
    result=[]
    for i in range(R):
        row=[]
        for j in range(C):
            result1=matrix1[i][j] + matrix2[i][j]
            row.append(result1)
        result.append(row)
    for r in result:
        print(r)            #printing addition result
    fun()
   
def sub():
 
    print("Enter matrix 1:")
    R = int(input("Enter the number of rows:"))
    C = int(input("Enter the number of columns:"))
    matrix1 = []
    print("Enter the entries row wise:")
    for i in range(R):      # A for loop for row entries
        a =[]
        for j in range(C):  # A for loop for column entries
           a.append(int(input(f"element[{i+1}][{j+1}]:")))
        matrix1.append(a)
    print("Martix 1 is :")
# For printing the matrix
   
    for i in range(R):
        for j in range(C):
           print(matrix1[i][j], end = " ")
        print()
    print("Enter matrix 2:")
    matrix2 = []
    print("Enter the entries row wise:")
    # For user input
    for i in range(R):      # A for loop for row entries
        a =[]
        for j in range(C):  # A for loop for column entries
           a.append(int(input(f"element[{i+1}][{j+1}]:")))
        matrix2.append(a)
    # For printing the matrix
    print ("Matrix 2 is:")
    for i in range(R):
        for j in range(C):
           print(matrix2[i][j], end = " ")
        print()
    print("Substraction of two matrices is: ")
    result=[]
    for i in range(R):
        row=[]
        for j in range(C):
            result2=matrix1[i][j] - matrix2[i][j]
            row.append(result2)
        result.append(row)
    for row in result:
        print(row)
    fun()
   
def multiply():

    print("Martix 1:")
    R=int(input("Enter the number of rows in matrix 1 :"))
    C=int(input("Enter the number of columns in matrix 1 :"))
    print("Enter the matrix row wise :")
    matrix1=[]
    for i in range(R):
        a=[]
        for j in range(C):
            a.append(int(input(f"element[{i+1}][{j+1}] :")))
        matrix1.append(a)
    print("Matrix 1 is : ")
    for i in range(R):
        for j in range (C):
            print(matrix1[i][j],end=" ")
        print()
       
        #second matrix
    print("Matrix 2:")
    R2=int(input("Enter the number of rows in matrix 2 :"))
    C2=int(input("Enter the number of columns in matrix 2 :"))
    print("Enter the matrix row wise :")
    matrix2=[]
    for i in range (R2):
        a=[]
        for j in range(C2):
            a.append(int(input(f"element[{i+1}][{j+1}] :")))
        matrix2.append(a)
    print("matrix 2 is : ")
    for i in range(R2):
        for j in range(C2):
            print(matrix2[i][j],end=" ")
        print()  
       
        #multiplication
    print ("Multiplication of two matrices is:")
    result1 = [[0 for j in range(C2)] for i in range(R)]
    for i in range(len (matrix1)):
        row=[]
        for j in range(len(matrix2[0])):
            for k in range(len(matrix2)):
                result1[i][j]+=matrix1[i][k]*matrix2[k][j]
    print()
    for i in result1:
        print(i)
    fun()
   
def transpose():
 
    print("NOTE: Only for 2x2 ,3x3 ,4x4,.....")
    R=int(input("Enter the number of rows in matrix :"))
    C=int(input("Enter the number of columns in matrix :"))
    print("Enter the entries row wise :")
    matrix=[]
    for i in range (R):
        a=[]
        for j in range(C):
            a.append(int(input(f"element[{i+1}][{j+1}] :" )))
        matrix.append(a)
    print("Your matrix is :")
    for i in range(R):
        for j in range(C):
            print(matrix[i][j],end =" ")
        print()
    result=[[0 for j in range(C)] for i in range(R)]
    for i in range(len(matrix)):
   # iterate through columns
        for j in range(len(matrix[0])):
            result[j][i] = matrix[i][j]
    print("Transpose of matrix is : ")
    for r in result:      
        print(r)              #result printing
    fun()
   
def fun():
    n=int(input("\n\n""Please type your choice:"))

    if n==1:
        add()
    elif n==2:
        sub()
    elif n==3:
        multiply()
    elif n==4:
        transpose()
    elif n==5:
        print("Thank You!!!....")
        exit()
    else:
        print("Sorry, invalid input!")
       
